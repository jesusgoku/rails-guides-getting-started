<%= form_for @article do |f| %>

    <% if @article.errors.any? %>
        <div class="alert alert-danger alert-dismissible" id="error_explanation" role="alert">
          <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <h2><%= pluralize(@article.errors.count, 'error') %> prohibited this article from being saved:</h2>
          <ul>
            <% @article.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="form-group">
      <label for=""><%= f.label :title %></label>
      <%= f.text_field :title, :class => 'form-control' %>
    </div>

    <div class="form-group">
      <label for=""><%= f.label :text %></label>
      <%= f.text_area :text, :class => 'form-control' %>
    </div>

    <%= button_tag(type: 'submit', class: 'btn btn-sm btn-primary') do %>
        <i class="fa fa-floppy-o"></i> Save
    <% end %>
    <%= link_to raw('<i class="fa fa-chevron-left"></i> Back'), articles_path, class: 'btn btn-sm btn-default' %>

<% end %>